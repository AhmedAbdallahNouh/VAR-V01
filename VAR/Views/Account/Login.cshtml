@model LoginVM

@section Styles{
 <link rel="stylesheet" href="~/css/Login.css" />
}

<div class="container login-form-container">
    <form id="login-form" asp-controller="Account" asp-action="Login" method="post">

        <div class="form-group d-flex mt-4 mb-4 " style="margin: 20px 0 20px 0;">
            <label asp-for="Email"  class="login-label" style="
             margin-left: 86px;
             margin-top: auto;
             margin-bottom: auto;
             color: white !important;
             margin-right: -56px;"></label>
            <input oninput="checkValid()" asp-for="Email" class=" form-control login-input mb-2" >
            <div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group d-flex mt-4">
            <label asp-for="Password" class="login-label" style="
              padding-right: -9px;
              margin-left: 87px;
              margin-top: auto;
              margin-bottom: auto;
              color: white !important;
              margin-right: -23px; ">Password</label>
            <input oninput="checkValid()" asp-for="Password" class=" form-control login-input mb-2">
            <div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <button type="submit"  id="login" class="btn btn-info btn-login text-white w-25  mt-4 mb-4" style=" margin-left: 41%;" >Login</button>    
        
        <div id="spinner" class="d-flex justify-content-center ">
        </div>

    </form>
</div>


@section Scripts{
     @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/Account.js"></script>
}

                